<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_pickability_header"
        style="@style/tv_header"
        android:text="Pickability" />

    <View style="@style/view_separator_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            style="@style/tv_standard_gray"
            android:layout_weight="2"
            android:text="Rank" />

        <TextView
            style="@style/tv_standard_gray"
            android:layout_weight="5"
            android:text="Team Number" />

        <TextView
            style="@style/tv_standard_gray"
            android:layout_weight="3"
            android:text="Pickability" />
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/Black" />

    <ListView
        android:id="@+id/lv_pickability"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>