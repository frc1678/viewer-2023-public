<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/whole_line"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_match_number"
        style="@style/tv_standard_black"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="Qual 1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tv_red_team_one"
                style="@style/tv_standard_white"
                android:background="@color/Red" />

            <Button
                android:id="@+id/tv_red_team_two"
                style="@style/tv_standard_white"
                android:background="@color/Red" />

            <Button
                android:id="@+id/tv_red_team_three"
                style="@style/tv_standard_white"
                android:background="@color/Red" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tv_red_predicted_rp1"
                        style="@style/RP_images"
                        android:src="@drawable/cargo_ball" />

                    <ImageView
                        android:id="@+id/tv_red_predicted_rp2"
                        style="@style/RP_images"
                        android:src="@drawable/pull_up_bars" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_red_predicted_score"
                    style="@style/tv_rp_datapoint"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tv_blue_team_one"
                style="@style/tv_standard_white"
                android:background="@color/Blue" />

            <Button
                android:id="@+id/tv_blue_team_two"
                style="@style/tv_standard_white"
                android:background="@color/Blue" />

            <Button
                android:id="@+id/tv_blue_team_three"
                style="@style/tv_standard_white"
                android:background="@color/Blue" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tv_blue_predicted_rp1"
                        style="@style/RP_images"
                        android:src="@drawable/cargo_ball" />

                    <ImageView
                        android:id="@+id/tv_blue_predicted_rp2"
                        style="@style/RP_images"
                        android:src="@drawable/pull_up_bars" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_blue_predicted_score"
                    style="@style/tv_rp_datapoint"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>