<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mstb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rotate_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/very_small"
            android:layout_weight="5"
            android:background="@color/colorPrimaryLight"
            android:text="@string/rotate" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/very_small"
            android:layout_marginRight="@dimen/very_small"
            android:layout_marginBottom="@dimen/very_small"
            android:layout_weight="1.2"
            android:background="@color/Red"
            android:scaleType="fitCenter"
            android:src="@drawable/close_button" />

    </LinearLayout>

    <ImageView
        android:id="@+id/pit_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:rotation="-90" />

</androidx.appcompat.widget.LinearLayoutCompat>